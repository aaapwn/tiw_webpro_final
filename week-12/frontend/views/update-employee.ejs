<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Update Employee</h1>
    <form action="/employees/<%=employee.EmployeeId%>" method="POST">
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName" value="<%=employee.FirstName%>" required>
        <br>
        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName" value="<%=employee.LastName%>" required>
        <br>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%=employee.Email%>" required>
        <br>
        <label for="phone">Phone Number:</label>
        <input type="tel" id="phone" name="phone" value="<%=employee.Phone%>" required>
        <br>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%=employee.Title%>" required>
        <br>
    </form>
    <button onclick="onSubmit()">Update</button>

    <script>
        const onSubmit = async () => {
            const firstName = document.getElementById('firstName').value;
            const lastName = document.getElementById('lastName').value;
            const email = document.getElementById('email').value;
            const phone = document.getElementById('phone').value;
            const title = document.getElementById('title').value;

            const response = await fetch('http://localhost:3000/employee/<%=employee.EmployeeId%>', {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    firstName: firstName,
                    lastName: lastName,
                    email: email,
                    phone: phone,
                    title: title
                })
            });

            if (response.ok) {
                window.location.href = '/employee/<%=employee.EmployeeId%>';
            } else {
                alert('Failed to create employee');
            }
        };
    </script>
</body>
</html>